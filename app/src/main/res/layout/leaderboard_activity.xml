<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btd_leaderboard">

    <!-- Vertical start at 30% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3" />

    <!-- Vertical end at 90% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Horizontal top at 20% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <!-- Horizontal bottom at 80% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94" />

    <!-- Vertical guideline: 40% from start for horizontal split -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.91" />


    <!-- User stats and info card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardUserStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_transparent_brown"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvUsername"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="0"
                android:shadowDy="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent_white"
                android:fontFamily="@font/luckiestguy"
                android:text="Username: "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBalloonsPopped"
                android:layout_width="wrap_content"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="0"
                android:shadowDy="3"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/luckiestguy"
                android:text="Balloons Popped: 0"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGamesPlayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/luckiestguy"
                android:text="Games Played: 0"
                android:textColor="@color/white"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="0"
                android:shadowDy="3"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/achievementsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/luckiestguy"
                android:text="Achievements Unlocked: 0/16"
                android:textColor="@color/white"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="0"
                android:shadowDy="3"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- RecyclerView for listing scores -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLeaderboard"
        android:layout_width="600dp"
        android:layout_height="250dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/wooden_background2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardUserStats"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="562dp"
        android:layout_height="106dp"
        app:layout_constraintBottom_toTopOf="@+id/rvLeaderboard"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/leaderboard_sign" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wooden_background2"
        android:fontFamily="@font/luckiestguy"
        android:gravity="center"
        android:text="Rank:            Username:            Balloons Popped:              Games Played:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/rvLeaderboard"
        app:layout_constraintEnd_toEndOf="@+id/rvLeaderboard"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/rvLeaderboard"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wooden_background2"
        android:fontFamily="@font/luckiestguy"
        android:text="Player Stats"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/cardUserStats"
        app:layout_constraintEnd_toEndOf="@+id/cardUserStats"
        app:layout_constraintStart_toStartOf="@+id/cardUserStats"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
    <!-- Achievements list layout, hidden by default, to be toggled by button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutAchievementsList"
        android:layout_width="400dp"
        android:layout_height="350dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wooden_background2"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAchievementsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Achievements"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/luckiestguy"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <ImageButton
                    android:id="@+id/btnCloseAchievements"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/close_x_button"
                    android:contentDescription="Close"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAchievementsList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/achievementsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Achievements"
        android:fontFamily="@font/luckiestguy"
        android:backgroundTint="@color/gold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardUserStats"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/cardUserStats"
        app:layout_constraintTop_toTopOf="@+id/cardUserStats"
        app:layout_constraintVertical_bias="0.857" />

</androidx.constraintlayout.widget.ConstraintLayout>
