<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/mapImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/btdmap1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="H,322:500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/gameContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/nextPhaseButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="550dp"
            android:text="Start Phase 2"
            android:visibility="gone" />
        <Button
            android:id="@+id/firstPhaseButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="550dp"
            android:text="Start First Phase"
            android:visibility="visible" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/dragLayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/towerPanel"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#CCFFFFFF"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tower options"
            android:textColor="@color/purple"
            android:fontFamily="@font/luckiestguy"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/towerMonkeyIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/angrymonkey"/>
            <TextView
                android:id="@+id/dartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/towerSniperIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/sniper"/>
            <TextView
                android:id="@+id/sniperPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/luckiestguy"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/towerIceIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ice_wizard"/>
            <TextView
                android:id="@+id/icePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/towerButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="🛡️"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"/>

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />


    <TextView
        android:id="@+id/health"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:text="100"
        android:fontFamily="@font/luckiestguy"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="7"
        app:layout_constraintStart_toStartOf="@id/guideline_healthText"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart"
        app:layout_constraintStart_toStartOf="@id/guideline_heart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_goldIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/gold_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/guideline_goldIcon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_goldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.14" />

    <TextView
        android:id="@+id/moneyText"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:text="100"
        android:fontFamily="@font/luckiestguy"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="730dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:shadowDx="15"
        android:shadowDy="15"
        android:shadowRadius="17"
        app:layout_constraintStart_toStartOf="@id/guideline_goldText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upgradeToggleButton"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:text="⬆️"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/pauseMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#AA000000"
        android:visibility="gone"
        android:elevation="10dp">

        <Button
            android:id="@+id/resumeButton"
            android:text="Resume"
            android:fontFamily="@font/luckiestguy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/exitButton"
            android:text="Exit to Menu"
            android:fontFamily="@font/luckiestguy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/towerUpgradePopup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CCFFFFFF"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/upgradeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade Tower"
            android:textColor="@color/purple"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/luckiestguy"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <!-- Long Range Darts optie -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/long_range_darts_upgrade_icon" />

            <Button
                android:id="@+id/btnUpgradeRange"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:text="Long Range Darts"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/purple"
                android:gravity="bottom|center_horizontal"/>
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <!-- Sharp Shots optie -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/razor_sharp_shots_upgrade_icon" />

            <Button
                android:id="@+id/btnUpgradeDamage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:text="Sharp Shots"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/purple"
                android:gravity="bottom|center_horizontal"/>

        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <Button
            android:id="@+id/btnSellTower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell"
            android:background="@color/transparent_white"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <!-- Close knop -->
        <ImageButton
            android:id="@+id/btnCloseUpgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/exit_button_"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/gameWonScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#AA000000"
        android:visibility="gone"
        android:elevation="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:elevation="12dp"
            app:cardCornerRadius="24dp"
            android:background="@drawable/wooden_background">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You Won!"
                    android:fontFamily="@font/luckiestguy"
                    android:textColor="@color/purple"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btnEndlessMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endless Mode"
                    android:fontFamily="@font/luckiestguy"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnExitToMainMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit to Main Menu"
                    android:fontFamily="@font/luckiestguy" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
